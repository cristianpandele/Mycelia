<?xml version="1.0" encoding="UTF-8"?>

<magic>
  <Styles>
    <Style name="default">
      <Nodes/>
      <Classes>
        <group border="2" flex-direction="column" padding="1"/>
      </Classes>
      <Types>
        <Slider border="0"/>
        <ToggleButton border="0" max-height="50" caption-size="0"/>
        <TextButton border="0" max-height="50" caption-size="0"/>
        <ComboBox border="0" max-height="50" caption-size="0"/>
        <Plot border="0" margin="0" padding="0" background-color="00000000"/>
      </Types>
      <Palettes>
        <default/>
      </Palettes>
    </Style>
  </Styles>
  <View id="root" flex-direction="column" resizable="1" resize-corner="1"
        flex-align-self="center" display="contents">
    <View border="2" background-color="peachpuff" caption="Visualisers"
          caption-size="0" title="Scope" pos-width="100%" pos-height="50%"
          flex-align-self="center" display="contents" margin="2" padding="1"
          radius="5" pos-x="0%" pos-y="0%">
      <View flex-align-self="center" display="contents" pos-width="10%" caption="Input Meter"
            margin="2" padding="1" border="2" flex-direction="row" flex-align-content="center"
            radius="5" border-color="" pos-x="0%" pos-height="100%" pos-y="0%">
        <Meter bar-fill-color="FFEDED3E" outline-color="FF0D0E30" border-color="FF0E1056"
               pos-y="0%" pos-height="100%" padding="1" margin="2" border="2"
               flex-align-self="center" source="inputMeter" pos-width="100%"
               pos-x="0%" radius="5"/>
      </View>
      <Plot source="output" plot-color="orange" pos-width="80%" pos-height="100%"
            flex-align-self="center" margin="2" padding="1" border="2" pos-x="10%"
            radius="5" id="Main Analyser" pos-y="0%"/>
      <View flex-align-self="center" display="contents" border="2" pos-x="90%"
            pos-width="10%" pos-y="0%" caption="Output Meter" border-color="FF6B3232"
            margin="2" padding="1" flex-align-content="center" flex-direction="row"
            radius="5" pos-height="100%">
        <Meter bar-fill-color="FFEDED3E" outline-color="FF0D0E30" border-color="FF0E1056"
               pos-y="0%" pos-height="100%" padding="1" margin="2" border="2"
               flex-align-self="center" source="outputMeter" pos-x="0%" pos-width="100%"
               radius="5"/>
      </View>
    </View>
    <View border="2" background-color="peachpuff" caption="XY Controls"
          caption-size="0" title="Scope" pos-width="100%" pos-height="20%"
          flex-align-self="center" display="contents" margin="2" padding="1"
          radius="5" pos-x="0%" pos-y="50%">
      <View pos-x="0%" pos-y="0%" pos-width="20%" pos-height="100%" display="contents"
            margin="5" padding="2" border="2" radius="10" title="Input XY"
            background-color="papayawhip" border-color="silver">
        <Plot source="input" plot-color="orange" pos-width="100%" pos-height="100%"
              flex-align-self="center" margin="0" padding="4" border="0" pos-x="0%"
              radius="10" pos-y="0%" id="Input Analyser" background-color="transparentwhite"/>
        <Plot source="output" plot-color="yellow" pos-width="100%" pos-height="100%"
              flex-align-self="center" margin="0" padding="4" border="0" pos-x="0%"
              radius="10" pos-y="0%" id="Output Analyser" background-color="60FFFAF0"
              plot-fill-color="orange"/>
        <XYDragComponent pos-y="0%" pos-height="100%" pos-x="0%" pos-width="100%" margin="0"
                         padding="4" border="0" caption="Input Sculpt" caption-placement="top-left"
                         xy-jump-to-click="1" lookAndFeel="FoleysFinest" parameter-x="bandpassfreq"
                         parameter-y="bandpasswidth" caption-color="black" radius="10"
                         xy-radius="7" xy-sense-factor="2" xy-drag-handle-over="brown"
                         xy-horizontal-over="brown" xy-vertical-over="brown" xy-drag-handle="rosybrown"
                         xy-horizontal="rosybrown" xy-vertical="rosybrown" background-color="transparentwhite"/>
      </View>
      <View pos-x="20%" pos-y="0%" pos-width="60%" pos-height="100%" display="contents"
            margin="5" padding="2" border="2" radius="10" title="Fold XY"
            background-color="papayawhip" border-color="silver">
        <XYDragComponent pos-y="0%" pos-height="100%" pos-x="0%" pos-width="100%" margin="0"
                         padding="4" border="0" caption="Fold" caption-placement="centred-top"
                         xy-jump-to-click="1" lookAndFeel="FoleysFinest" background-color="transparentwhite"
                         parameter-x="foldposition" wheel-parameter="foldwindowsize" parameter-y="foldwindowshape"
                         caption-color="black" radius="10" xy-radius="7" xy-sense-factor="2"
                         xy-drag-handle="rosybrown" xy-horizontal="rosybrown" xy-vertical="rosybrown"
                         xy-drag-handle-over="brown" xy-horizontal-over="brown" xy-vertical-over="brown"/>
      </View>
      <View pos-x="80%" pos-y="0%" pos-width="20%" pos-height="100%" display="contents"
            margin="5" padding="2" border="2" radius="10" title="Output XY"
            background-color="papayawhip" border-color="silver">
        <XYDragComponent pos-y="0%" pos-height="100%" pos-x="0%" pos-width="100%" margin="0"
                         padding="4" border="0" caption="Output Sculpt" caption-placement="top-right"
                         xy-jump-to-click="1" lookAndFeel="FoleysFinest" background-color="transparentwhite"
                         parameter-x="delayduck" parameter-y="drywet" caption-color="black"
                         radius="5" xy-radius="7" xy-sense-factor="2" xy-drag-handle-over="brown"
                         xy-horizontal-over="brown" xy-vertical-over="brown" xy-drag-handle="rosybrown"
                         xy-horizontal="rosybrown" xy-vertical="rosybrown"/>
      </View>
    </View>
    <View margin="2" padding="1" max-height="300" title="Mycelial Delay Controls"
          pos-y="70%" pos-width="100%" pos-height="30%" flex-align-self="center"
          pos-x="0%" display="contents" caption="Mycelial Delay Controls"
          caption-size="0" border="2" radius="5" background-color="peachpuff">
      <View flex-direction="row" caption="Input Levels" flex-align-self="center"
            display="contents" pos-height="100%" pos-y="0%" padding="2" border="2"
            margin="5" border-color="silver" pos-x="0%" pos-width="20%" radius="10"
            background-color="FFEDC818" caption-color="black">
        <Slider caption="Preamp Gain" parameter="preamplevel" slider-type="rotary"
                pos-height="80%" flex-align-self="stretch" lookAndFeel="FoleysFinest"
                pos-y="5%" flex-grow="1.0" flex-shrink="1.0" suffix="%" tooltip="Input level with added crunch"
                pos-x="0%" pos-width="50%" caption-color="black" slider-text="black"
                radius="40" slider-text-outline="transparentwhite" background-gradient="linear-gradient(143,0% 10808080,100% ffedc818)"
                background-color="10808080"/>
        <Slider caption="Reverb Mix" parameter="reverbmix" lookAndFeel="FoleysFinest"
                slider-type="rotary" caption-placement="centred-top" slider-textbox="textbox-below"
                flex-align-self="stretch" pos-height="80%" pos-y="5%" suffix="%"
                pos-width="50%" pos-x="50%" tooltip="The amount of reverb feeding back into the system"
                background-color="10808080" radius="40" caption-color="black"
                slider-text="black" slider-text-outline="transparentwhite" background-gradient="linear-gradient(143,0% 10808080,100% ffedc818)"/>
      </View>
      <View padding="2" border="2" caption="Trees" flex-align-content="center"
            display="contents" flex-align-self="center" border-color="silver"
            flex-grow="1.0" flex-shrink="1.0" pos-width="20%" pos-x="20%"
            margin="5" radius="10" pos-y="0%" pos-height="100%" background-color="forestgreen"
            caption-color="black">
        <Slider caption="Size" parameter="treesize" lookAndFeel="FoleysFinest"
                slider-type="rotary" pos-x="0%" pos-y="5%" pos-width="50%" pos-height="80%"
                caption-placement="centred-top" slider-textbox="textbox-below"
                flex-align-self="stretch" tooltip="Influences their audio energy updake"
                radius="40" background-color="10808080" caption-color="black"
                slider-text="black" slider-text-outline="transparentwhite" background-gradient="linear-gradient(143,0% 10808080,100% ffa5680e)"/>
        <Slider caption="Density" parameter="treedensity" slider-type="rotary"
                pos-x="50%" pos-y="5%" pos-width="50%" pos-height="80%" max-height="200"
                flex-align-self="stretch" suffix="%" tooltip="Affects the landscape topology"
                radius="40" background-color="10808080" caption-color="black"
                slider-text="black" slider-text-outline="transparentwhite" background-gradient="linear-gradient(143,0% 10808080,100% ffa5680e)"/>
      </View>
      <View caption="Universe Controls" padding="2" border="2" pos-y="0%"
            pos-width="20%" pos-x="40%" border-color="silver" display="contents"
            margin="5" radius="10" pos-height="100%" background-color="FFC877D1"
            caption-color="black">
        <Slider caption="Stretch" parameter="stretch" slider-type="rotary" pos-width="50%"
                pos-height="80%" slider-textbox="textbox-below" flex-align-self="stretch"
                pos-x="0%" pos-y="5%" suffix=" x" tooltip="Pull it apart, or put it back together again?"
                caption-placement="centred-top" radius="40" background-color="10808080"
                caption-color="black" slider-text="black" slider-text-outline="transparentwhite"/>
        <Slider caption="Scarcity/Abundance" parameter="scarcityabundance" slider-type="rotary"
                pos-width="50%" pos-height="80%" pos-x="50%" pos-y="5%" visibility=""
                tooltip="Override the global availability of nutrients in the system"
                background-color="10808080" radius="40" caption-color="black"
                slider-text="black" slider-text-outline="transparentwhite"/>
        <Label text="MIDI Clock Sync Off" background-color="FFFF8800" property="midiClockStatus"
               pos-height="14%" pos-x="3%" pos-width="43%" pos-y="86%" justification="centred"
               font-size="12.0" border="1" border-color="FF000000" radius="5"
               value="midiClockStatus" visibility="midiClockStatusVisibility"
               id="MIDI Sync"/>
        <Label text="Scar/Abund Automated" background-color="FF008800" property="scarcityAbundanceAuto"
               pos-height="14%" pos-x="53%" pos-width="43%" pos-y="86%" justification="centred"
               font-size="12.0" border="1" border-color="FF000000" radius="5"
               value="scarcityAbundanceAuto" visibility="scarcityAbundanceAutoVisibility"
               id="Scar/Abundance Automation"/>
      </View>
      <View caption="Mycelia" padding="2" border="2" pos-y="0%" pos-width="20%"
            border-color="silver" pos-x="60%" display="contents" flex-align-self="center"
            margin="5" radius="5" pos-height="100%" background-color="FFA5680E"
            caption-color="black">
        <Slider caption="Entanglement" parameter="entanglement" slider-type="rotary"
                pos-height="80%" pos-x="0%" pos-y="5%" pos-width="50%" suffix="%"
                tooltip="Controls the level of interconnectdedness in the mycelial layer"
                background-color="10808080" radius="40" caption-color="black"
                slider-text="black" slider-text-outline="transparentwhite"/>
        <Slider caption="Growth Rate" parameter="growthrate" slider-type="rotary"
                pos-height="80%" pos-width="50%" pos-y="5%" flex-align-self="stretch"
                pos-x="50%" suffix="%" tooltip="Sets the speed of aging of the mycelial colonies"
                background-color="10808080" radius="40" caption-color="black"
                slider-text="black" slider-text-outline="transparentwhite"/>
      </View>
      <View padding="2" border="2" caption="Sky" flex-align-content="" display="contents"
            flex-align-self="" border-color="silver" flex-grow="1.0" flex-shrink="1.0"
            pos-width="20%" pos-x="80%" margin="5" radius="10" pos-y="0%"
            pos-height="100%" background-color="skyblue" caption-color="black">
        <Slider caption="Humidity" parameter="skyhumidity" lookAndFeel="FoleysFinest"
                slider-type="rotary" pos-y="5%" pos-width="50%" pos-height="80%"
                caption-placement="centred-top" slider-textbox="textbox-below"
                flex-align-self="stretch" pos-x="0%" suffix="%" tooltip="The dampness of the surrounding atmosphere"
                radius="40" background-color="10808080" caption-color="black"
                slider-text="black" slider-text-outline="transparentwhite"/>
        <Slider caption="Height" parameter="skyheight" slider-type="rotary" pos-x="50%"
                pos-y="5%" pos-width="50%" pos-height="80%" flex-align-self="stretch"
                suffix="%" tooltip="Push the sky away" radius="40" background-color="10808080"
                caption-color="black" slider-text="black" slider-text-outline="transparentwhite"/>
      </View>
    </View>
  </View>
</magic>
